<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationSuccessActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/formablanca"
        android:scaleType="fitXY"
        android:layout_marginTop="-300dp"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintTop_toTopOf="@id/horizontalTop" />

    <TextView
        android:id="@+id/success_message"
        style="@style/cuerpobold"
        android:layout_width="342dp"
        android:layout_height="328dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="\n¡El registro se realizó con éxito!\n\n\nSu código único es:\n\n\n\n\nDeberá usarlo cuando conecte su casco. "
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/vertical"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintTop_toTopOf="@id/horizontalTop" />

    <TextView
        android:id="@+id/generated_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:text="1234"
        style="@style/cuerpobold"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/success_message"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="@id/vertical"
        android:gravity="center" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="190dp"
        android:text="Comenzar"
        android:textColor="#FFFFFF"
        android:background="@drawable/botonvioleta"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/generated_code_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/manchita"
        android:layout_width="290dp"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="@id/horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="370dp"
        app:srcCompat="@drawable/manchita" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>


</androidx.constraintlayout.widget.ConstraintLayout>
