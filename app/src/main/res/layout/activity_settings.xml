<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:clipToOutline="true">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo" />

    <!-- Forma blanca superpuesta -->

    <!-- Manchita de decoración -->
    <ImageView
        android:id="@+id/formablanca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:srcCompat="@drawable/formablanca" />

    <ImageView
        android:id="@+id/manchita"
        android:layout_width="290dp"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="@id/horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/manchita" />

    <!-- Directrices para organizar el layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.3" />

    <!-- Nombre de usuario -->
    <TextView
        android:id="@+id/user_name"
        style="@style/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Configuración"
        android:textColor="@color/violet"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageButton
        android:id="@+id/increase_font_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/fontsize"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/decrease_font_button"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/increase_font_text"
        style="@style/cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aumentar Fuente"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/increase_font_button"
        app:layout_constraintStart_toStartOf="@id/increase_font_button"
        app:layout_constraintEnd_toEndOf="@id/increase_font_button"
        android:layout_marginTop="8dp" />

    <!-- Botón para disminuir el tamaño de fuente con texto explicativo -->
    <ImageButton
        android:id="@+id/decrease_font_button"
        android:layout_width="32dp"
        android:layout_height="52dp"
        android:src="@drawable/fontsize"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/increase_font_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/decrease_font_text"
        style="@style/cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disminuir Fuente"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/decrease_font_button"
        app:layout_constraintStart_toStartOf="@id/decrease_font_button"
        app:layout_constraintEnd_toEndOf="@id/decrease_font_button"
        android:layout_marginTop="8dp" />

    <!-- Botón para editar información personal con texto explicativo -->
    <ImageButton
        android:id="@+id/edit_info_button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/editinfo"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/increase_font_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/help_button"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/edit_info_text"
        style="@style/cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Información"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/edit_info_button"
        app:layout_constraintStart_toStartOf="@id/edit_info_button"
        app:layout_constraintEnd_toEndOf="@id/edit_info_button"
        android:layout_marginTop="8dp" />

    <!-- Botón de ayuda (contactos útiles) con texto explicativo -->
    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/help"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/decrease_font_button"
        app:layout_constraintStart_toEndOf="@id/edit_info_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/help_text"
        style="@style/cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/help_button"
        app:layout_constraintStart_toStartOf="@id/help_button"
        app:layout_constraintEnd_toEndOf="@id/help_button"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/botonvioleta"
        android:text="Volver"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
