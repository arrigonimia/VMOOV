<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        style="@style/titulo"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/successRateTextView"
        style="@style/cuerpobold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Movimientos exitosos"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/averageTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/cuerpobold"
        android:text="Tiempo promedio de ejecución"
        app:layout_constraintTop_toBottomOf="@id/successRateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="0dp"
        style="@style/cuerpobold"
        android:layout_height="wrap_content"
        android:text="Duración de la sesión"
        app:layout_constraintTop_toBottomOf="@id/averageTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
