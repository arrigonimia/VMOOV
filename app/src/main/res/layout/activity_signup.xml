<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/botonvioleta"
        android:text="VOLVER"
        android:textAppearance="@style/botones_inferiores"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintTop_toTopOf="@id/horizontalTop"
        app:layout_constraintBottom_toBottomOf="@id/horizontalTop"/>

    <ImageView
        android:id="@+id/forma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintTop_toTopOf="@id/horizontalTop2"
        app:layout_constraintBottom_toBottomOf="@id/horizontalBottom2"
        app:srcCompat="@drawable/vertical" />

    <!-- ScrollView para hacer los EditText scrolleables -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="@id/forma"
        app:layout_constraintBottom_toBottomOf="@id/forma"
        app:layout_constraintStart_toStartOf="@id/forma"
        app:layout_constraintEnd_toEndOf="@id/forma">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingBottom="-40dp">

            <EditText
                android:id="@+id/firstname_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="@style/input"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:hint="Nombre"
                android:layout_marginTop="20dp"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/lastname_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="Apellido"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/dni_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="DNI"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:inputType="number"/>

            <EditText
                android:id="@+id/gender_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="Género"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"/>

            <EditText
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="Correo electrónico"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/pass_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="Contraseña"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:inputType="textWebPassword"/>

            <EditText
                android:id="@+id/repass_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/input"
                android:hint="Reingresar contraseña"
                android:layout_marginTop="25dp"
                android:imeOptions="actionDone"
                android:inputType="textWebPassword"/>


            <CheckBox
                android:id="@+id/checkboxUserType"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Soy profesional de salud"
                android:textColor="@color/violet"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/signUp_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-28dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/botonvioleta"
        android:gravity="center"
        android:text="Registrarme"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="@id/horizontalBottom2"
        app:layout_constraintBottom_toBottomOf="@id/horizontalBottom2"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toEndOf="@id/derecha" />

    <ImageView
        android:id="@+id/manchita"
        android:layout_width="290dp"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="@id/horizontalBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="-7dp"
        app:srcCompat="@drawable/manchita" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/izquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/derecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
