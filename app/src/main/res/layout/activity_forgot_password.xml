<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalTop"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/logovmoov" />

    <ImageView
        android:id="@+id/formablanca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/horizontalTop"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintBottom_toBottomOf="@id/background"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/formablanca" />

    <EditText
        android:id="@+id/email_reset_text"
        style="@style/input"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:hint="correo electrÃ³nico"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintTop_toBottomOf="@+id/horizontal" />

    <TextView
        android:id="@+id/reset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:gravity="center"
        android:text="@string/email_reset"
        android:textAppearance="@style/cuerpobold"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintBottom_toTopOf="@id/horizontal" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/botonvioleta"
        android:text="VOLVER"
        android:textAppearance="@style/botones_inferiores"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintTop_toTopOf="@id/horizontalTop"
        app:layout_constraintBottom_toBottomOf="@id/horizontalTop"/>

    <ImageView
        android:id="@+id/manchita"
        android:layout_width="290dp"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="@id/horizontalBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="-7dp"
        app:srcCompat="@drawable/manchita" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="154dp"
        android:layout_height="70dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/botonvioleta"
        android:text="CONFIRMAR"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/vertical"
        app:layout_constraintEnd_toEndOf="@id/vertical" app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/izquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/derecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="366dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>
