<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shape_with_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#E6E6E6">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />


    <EditText
        android:id="@+id/email_reset_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="338dp"
        android:background="#FFFFFF"
        android:hint="Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_text"
        android:layout_width="307dp"
        android:layout_height="92dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="171dp"
        android:gravity="top"
        android:lineSpacingExtra="12sp"
        android:text="@string/email_reset"
        android:textAppearance="@style/reset_password"
        android:translationY="-5.8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/rounded_button"
        android:text="Back"
        android:textAppearance="@style/botones_inferiores"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="154dp"
        android:layout_height="70dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="447dp"
        android:background="@drawable/boton1"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
