<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ConnectionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@id/success_message"
        app:layout_constraintStart_toStartOf="@id/success_message"
        app:layout_constraintTop_toTopOf="@id/success_message"

        android:src="@drawable/formablanca"

        />


    <TextView
        android:id="@+id/success_message"
        style="@style/cuerpobold"
        android:layout_width="342dp"
        android:layout_height="328dp"
        android:layout_marginTop="224dp"
        android:gravity="center"
        android:text="\nIngrese el siguiente codigo desde el casco de VR\n\n\n\n\nLuego sigua las instrucciones desde allÃ¬. "
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generated_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:text="1234"
        style="@style/cuerpobold"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/success_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="170dp"
        android:text="Comenzar"
        android:textColor="#FFFFFF"
        android:background="@drawable/botonvioleta"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/generated_code_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
