<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:clipToOutline="true"
    android:gravity="center">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" /> <!-- Ajusta este valor para mover todo hacia abajo -->


    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"/>

    <!-- Ajustar el zócalo para que esté centrado horizontalmente -->
    <ImageView
        android:id="@+id/zocalo"
        android:layout_width="420dp"
        android:layout_height="200dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/zocalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barChart" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="372dp"
        android:layout_height="109dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:srcCompat="@drawable/botones_blancos" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        app:srcCompat="@drawable/cajablanca_grande" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="310dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:srcCompat="@drawable/botones_blancos" />


    <ImageButton
        android:id="@+id/home"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />
    />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />
    />

    <Button
        android:id="@+id/buttonConnect"
        style="@style/cuerpobold"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botonvioleta"
        android:text="CONECTAR CASCO"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView0" />

    <TextView
        android:id="@+id/LastSeizure"
        style="@style/cuerpobold"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/last_session"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/Count"
        style="@style/cuerpobold"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="-12dp"
        android:gravity="center"
        android:text="@string/duration"
        android:textColor="@color/blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/count"
        app:layout_constraintBottom_toTopOf="@+id/duration_value"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <TextView
        android:id="@+id/count"
        style="@style/cuerpobold"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/month"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/seizure_month"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/imageView9" />


    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="28/07/2024"
        android:textColor="@color/blue"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/LastSeizure" />

    <TextView
        android:id="@+id/duration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/seizure_month"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <TextView
        android:id="@+id/seizure_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="372dp"
        android:layout_height="197dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView7" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinemed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>
