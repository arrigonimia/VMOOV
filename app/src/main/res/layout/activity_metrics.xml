<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToOutline="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>


    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:layout_constraintEnd_toEndOf="@id/guidelineder" />

    <ImageView
        android:id="@+id/formablanca"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        android:scaleType="fitCenter"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/formablanca" />

    <!-- Ajustar el zócalo para que esté centrado horizontalmente -->
    <ImageView
        android:id="@+id/zocalo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/zocalo"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintTop_toBottomOf="@id/guidelineBottom"
        app:layout_constraintBottom_toBottomOf="@id/fondo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_blancos"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@id/boxDer"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        android:layout_marginTop="-30dp"
        android:padding="16dp">

        <!-- TextView de "Last Session" -->
        <TextView
            android:id="@+id/LastSeizure"
            style="@style/cuerpobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/last_session"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TextView de Fecha de nacimiento -->
        <TextView
            android:id="@+id/birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/cuerpobold"
            android:gravity="center"
            android:text="28/07/2024"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/LastSeizure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxDer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/cajablanca_grande"
        app:layout_constraintTop_toBottomOf="@id/boxPrincipal"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        android:padding="16dp">

        <TextView
            android:id="@+id/Time"
            style="@style/cuerpobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/average_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:gravity="center"
            style="@style/cuerpobold"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/buttonConnect"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/connect"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zocalo"
        app:layout_constraintVertical_bias="0.352" />

    <ImageButton
        android:id="@+id/buttonLogOut"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintTop_toTopOf="@+id/zocalo"/>

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zocalo"
        app:layout_constraintVertical_bias="0.352" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxIzq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cajablanca_grande"
        app:layout_constraintTop_toBottomOf="@id/boxPrincipal"
        app:layout_constraintEnd_toStartOf="@id/guidelinemed"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        android:padding="16dp">

        <TextView
            android:id="@+id/Count"
            style="@style/cuerpobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/success"
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/true_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:gravity="center"
            style="@style/cuerpobold"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/Count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/chart_title2"
        style="@style/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movimientos exitosos"
        android:textColor="@color/violet"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        app:layout_constraintTop_toTopOf="@id/guidelinehor"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintBottom_toTopOf="@id/barChart2"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="12dp"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/fila1"
        app:layout_constraintBottom_toTopOf="@id/fila2"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelineizq" />

    <TextView
        android:id="@+id/chart_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        style="@style/titulo"
        android:textColor="#FF3F51B5"
        android:text="Tiempo promedio"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintBottom_toTopOf="@id/barChart" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:layout_constraintTop_toBottomOf="@id/fila3"
        app:layout_constraintBottom_toTopOf="@id/fila4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinemed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fila1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fila2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fila3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fila4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

</androidx.constraintlayout.widget.ConstraintLayout>
