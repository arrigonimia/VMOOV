<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:clipToOutline="true"
    android:gravity="center">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="857dp" />

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:layout_constraintEnd_toEndOf="@id/guidelineder" />

    <ImageView
        android:id="@+id/formablanca"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        android:scaleType="fitXY"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/formablanca2" />

    <!-- Ajustar el zócalo para que esté centrado horizontalmente -->
    <ImageView
        android:id="@+id/zocalo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/zocalo"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        app:layout_constraintTop_toBottomOf="@id/guidelineBottom" />

    <ImageView
        android:id="@+id/boxPrincipal"
        android:layout_width="372dp"
        android:layout_height="109dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="-60dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@+id/boxDer"
        app:layout_constraintEnd_toEndOf="@id/guidelineder"
        app:layout_constraintStart_toStartOf="@id/guidelineizq"
        app:srcCompat="@drawable/botones_blancos" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/boxIzq"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/boxPrincipal"
        app:layout_constraintTop_toBottomOf="@id/boxPrincipal"
        app:srcCompat="@drawable/cajablanca_grande" />

    <ImageView
        android:id="@+id/boxDer"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="310dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/boxPrincipal"
        app:layout_constraintEnd_toEndOf="@id/boxPrincipal"
        app:srcCompat="@drawable/cajablanca_grande" />

    <ImageButton
        android:id="@+id/buttonConnect"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/connect"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zocalo"
        app:layout_constraintVertical_bias="0.352" />

    <ImageButton
        android:id="@+id/buttonLogOut"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintTop_toTopOf="@+id/zocalo"/>

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@id/zocalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zocalo"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/LastSeizure"
        style="@style/cuerpobold"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/last_session"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/boxPrincipal"
        app:layout_constraintStart_toStartOf="@+id/boxPrincipal"
        app:layout_constraintTop_toTopOf="@+id/boxPrincipal" />

    <TextView
        android:id="@+id/Count"
        style="@style/cuerpobold"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="-12dp"
        android:gravity="center"
        android:text="@string/success"
        android:textColor="@color/blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/Time"
        app:layout_constraintBottom_toTopOf="@+id/true_count"
        app:layout_constraintEnd_toEndOf="@+id/boxIzq"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/boxIzq" />

    <TextView
        android:id="@+id/Time"
        style="@style/cuerpobold"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/average_time"
        app:layout_constraintEnd_toEndOf="@+id/boxDer"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/boxDer" />

    <TextView
        android:id="@+id/birth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        style="@style/cuerpobold"
        android:gravity="center"
        android:text="28/07/2024"
        android:textColor="@color/blue"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="@+id/boxPrincipal"
        app:layout_constraintStart_toStartOf="@+id/boxPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/LastSeizure" />

    <TextView
        android:id="@+id/true_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="30sp"
        style="@style/cuerpobold"
        app:layout_constraintBaseline_toBaselineOf="@+id/average_time"
        app:layout_constraintBottom_toBottomOf="@+id/boxIzq"
        app:layout_constraintEnd_toEndOf="@+id/boxIzq"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/boxIzq" />

    <TextView
        android:id="@+id/average_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="0"
        android:gravity="center"
        style="@style/cuerpobold"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/boxDer"
        app:layout_constraintEnd_toEndOf="@+id/boxDer"
        app:layout_constraintStart_toStartOf="@+id/boxDer" />

    <TextView
        android:id="@+id/chart_title2"
        style="@style/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Movimientos exitosos"
        android:textColor="@color/violet"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintBottom_toTopOf="@id/barChart2"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart2"
        android:layout_width="372dp"
        android:layout_height="170dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@id/barChart"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintStart_toStartOf="@id/guidelinemed" />

    <TextView
        android:id="@+id/chart_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="22dp"
        android:textSize="14dp"
        style="@style/titulo"
        android:textColor="#FF3F51B5"
        android:text="Tiempo promedio"
        app:layout_constraintStart_toStartOf="@id/guidelinemed"
        app:layout_constraintEnd_toEndOf="@id/guidelinemed"
        app:layout_constraintBottom_toTopOf="@id/barChart" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="372dp"
        android:layout_height="170dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinemed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>
